---
import ExperienceItem from "./ExperienceItem.astro";

interface Props {
  data: Array<{
    title: string;
    company: string;
    description: string | string[];
    link?: string;
    date: string;
  }>;
}

const { data } = Astro.props;
---

<section id="experience" class="relative py-24 md:py-32">
  <div class="container mx-auto px-6 md:px-8 lg:px-12 max-w-7xl relative z-10">
    <div class="space-y-12">
      <div class="space-y-4">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-border/50 bg-muted/30"
        >
          <div class="h-1.5 w-1.5 rounded-full bg-foreground animate-pulse">
          </div>
          <span class="text-xs font-mono font-medium">Experience</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-balance">
          Professional Experience
        </h2>
      </div>

      <div class="relative mt-16">
        {data.map((item) => <ExperienceItem {...item} />)}
      </div>
    </div>
  </div>
</section>
