---
interface Props {
  data: {
    paragraphs: string[];
  };
}

const { data } = Astro.props;
---

<section id="about" class="relative py-24 md:py-32">
  <div class="absolute inset-0 grid-pattern opacity-[0.08]"></div>
  <div class="container mx-auto px-6 md:px-8 lg:px-12 max-w-7xl relative z-10">
    <div class="space-y-12">
      <div class="space-y-8">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-border/50 bg-muted/30"
        >
          <div class="h-1.5 w-1.5 rounded-full bg-foreground animate-pulse">
          </div>
          <span class="text-xs font-mono font-medium">About</span>
        </div>

        <div
          class="space-y-6 text-lg md:text-xl leading-relaxed text-muted-foreground max-w-3xl"
        >
          {
            data.paragraphs.map((paragraph, index) => (
              <p
                class={index === 0 ? "text-foreground" : ""}
                set:html={paragraph}
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
