---
interface Props {
  data: {
    email: string;
    github: string;
    linkedin: string;
    twitter?: string;
    location?: string;
    phone?: string;
  };
}

const { data } = Astro.props;
---

<section id="contact" class="relative py-24 md:py-32">
  <div class="absolute inset-0 grid-pattern opacity-[0.08]"></div>
  <div class="container mx-auto px-6 md:px-8 lg:px-12 max-w-7xl relative z-10">
    <div class="space-y-12">
      <div class="space-y-4">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-border/50 bg-muted/30"
        >
          <div class="h-1.5 w-1.5 rounded-full bg-foreground animate-pulse">
          </div>
          <span class="text-xs font-mono font-medium">Contact</span>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold text-balance">
          Let's work together
        </h2>
        <p class="text-muted-foreground text-lg max-w-2xl">
          Open to new opportunities, collaborations, and conversations. Reach
          out through any of the channels below.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-4 max-w-2xl">
        {
          data.location && (
            <div class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors">
              <div class="p-3 rounded-lg bg-muted">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm text-muted-foreground">Location</p>
                <p class="font-medium group-hover:text-foreground/80 transition-colors">
                  {data.location}
                </p>
              </div>
            </div>
          )
        }
        {
          data.phone && (
            <a
              href={`tel:${data.phone}`}
              class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors"
            >
              <div class="p-3 rounded-lg bg-muted">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm text-muted-foreground">Phone</p>
                <p class="font-medium group-hover:text-foreground/80 transition-colors">
                  {data.phone}
                </p>
              </div>
            </a>
          )
        }
        <a
          href={`mailto:${data.email}`}
          class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors"
        >
          <div class="p-3 rounded-lg bg-muted">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm text-muted-foreground">Email</p>
            <p
              class="font-medium group-hover:text-foreground/80 transition-colors"
            >
              {data.email}
            </p>
          </div>
        </a>

        <a
          href={data.github}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors"
        >
          <div class="p-3 rounded-lg bg-muted">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm text-muted-foreground">GitHub</p>
            <p
              class="font-medium group-hover:text-foreground/80 transition-colors"
            >
              View Profile
            </p>
          </div>
        </a>

        <a
          href={data.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors"
        >
          <div class="p-3 rounded-lg bg-muted">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm text-muted-foreground">LinkedIn</p>
            <p
              class="font-medium group-hover:text-foreground/80 transition-colors"
            >
              Connect
            </p>
          </div>
        </a>

        {
          data.twitter && (
            <a
              href={data.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-4 p-6 border border-border rounded-xl hover:border-foreground/20 transition-colors"
            >
              <div class="p-3 rounded-lg bg-muted">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm text-muted-foreground">Twitter/X</p>
                <p class="font-medium group-hover:text-foreground/80 transition-colors">
                  Follow
                </p>
              </div>
            </a>
          )
        }
      </div>

      <!-- Footer -->
      <footer
        class="pt-16 border-t border-border/50 text-sm text-muted-foreground space-y-2"
      >
        <p class="font-medium">
          © {new Date().getFullYear()} Ali Fouladgar
        </p>

        <p class="text-xs text-muted-foreground/80">
          Built with curiosity, presence, and connection — the values behind
          everything I create.
        </p>
      </footer>
    </div>
  </div>
</section>
