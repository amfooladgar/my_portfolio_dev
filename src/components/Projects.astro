---
interface Props {
  data: Array<{
    title: string;
    description: string;
    tags: string[];
    links: Array<{ label: string; url: string; primary: boolean }>;
    icon?: string;
    stats?: { stars?: string; forks?: string };
  }>;
}

const { data } = Astro.props;
---

<section id="projects" class="relative py-24 md:py-32">
  <div class="absolute inset-0 grid-pattern opacity-30"></div>
  <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12 relative z-10">
    <div class="space-y-16">
      <div class="space-y-4">
        <p
          class="text-sm font-medium text-muted-foreground tracking-wide uppercase"
        >
          Projects
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight">
          Featured work
        </h2>
      </div>

      <div class="space-y-6">
        {
          data.map((project, index) => (
            <div
              class="group relative border rounded-lg p-8 md:p-10 bg-background card-hover"
              style={`transition-delay: ${index * 100}ms`}
            >
              <div class="space-y-6">
                <div class="space-y-3">
                  {project.icon && (
                    <div class="inline-flex p-2.5 rounded-xl bg-muted/50 group-hover:bg-muted transition-colors mb-2">
                      {project.icon === "shield" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-5 w-5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1Z" />
                        </svg>
                      )}
                      {project.icon === "calendar" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-5 w-5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M8 2v4" />
                          <path d="M16 2v4" />
                          <rect width="18" height="18" x="3" y="4" rx="2" />
                          <path d="M3 10h18" />
                        </svg>
                      )}
                    </div>
                  )}
                  <h3 class="text-2xl md:text-3xl font-bold tracking-tight">
                    {project.title}
                  </h3>
                  <p class="text-muted-foreground text-lg leading-relaxed">
                    {project.description}
                  </p>
                </div>

                <div class="flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="text-xs px-3 py-1.5 bg-muted/50 rounded-md font-medium border">
                      {tag}
                    </span>
                  ))}
                </div>

                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 pt-4 border-t">
                  <div />
                  <div class="flex items-center gap-2">
                    {project.links.map((link) => (
                      <a
                        href={link.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class={`inline-flex items-center justify-center text-sm font-medium h-8 rounded-md gap-1.5 px-3 ${
                          link.primary
                            ? "bg-primary text-primary-foreground hover:bg-primary/90"
                            : "border bg-background shadow-xs hover:bg-foreground hover:text-background"
                        } transition-colors`}
                      >
                        {link.label === "Code" && (
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                            <path d="M9 18c-4.51 2-5-2-7-2" />
                          </svg>
                        )}
                        {link.label}
                        {link.primary && (
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 ml-2"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path d="M7 7h10v10" />
                            <path d="M7 17 17 7" />
                          </svg>
                        )}
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center pt-8">
        <a
          href="/projects"
          class="inline-flex items-center justify-center gap-2 text-sm font-medium h-10 rounded-md px-6 bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          View Other Important Projects
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
