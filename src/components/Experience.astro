---
interface Props {
  data: Array<{
    title: string;
    icon: string;
    skills: string[];
  }>;
}

const { data } = Astro.props;
---

<section id="skills" class="relative py-24 md:py-32 bg-muted/30">
  <div class="absolute inset-0 grid-pattern-lg opacity-[0.06]"></div>
  <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12 relative z-10">
    <div class="space-y-12">
      <div class="space-y-4">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-border/50 bg-background/50"
        >
          <div class="h-1.5 w-1.5 rounded-full bg-foreground animate-pulse">
          </div>
          <span class="text-xs font-mono font-medium">Skills</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-balance">
          Technical expertise
        </h2>
        <p class="text-muted-foreground text-lg max-w-2xl">
          From low-level network infrastructure to high-level ML products, I
          enjoy connecting systems end to end.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {
          data.map((group, index) => (
            <div
              class="group relative border border-border/50 rounded-2xl p-8 bg-background hover:border-border hover:shadow-lg transition-all duration-300"
              style={`transition-delay: ${index * 100}ms`}
            >
              <div class="flex items-center gap-3 mb-6">
                <div class="p-3 rounded-xl bg-muted/50 group-hover:bg-muted transition-colors">
                  {group.icon === "sparkles" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0Z" />
                    </svg>
                  )}
                  {group.icon === "cloud" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z" />
                    </svg>
                  )}
                  {group.icon === "database" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <ellipse cx="12" cy="5" rx="9" ry="3" />
                      <path d="M3 5V19A9 3 0 0 0 21 19V5" />
                      <path d="M3 12A9 3 0 0 0 21 12" />
                    </svg>
                  )}
                  {group.icon === "code" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="m18 16 4-4-4-4" />
                      <path d="m6 8-4 4 4 4" />
                      <path d="m14.5 4-5 16" />
                    </svg>
                  )}
                </div>
                <h3 class="font-semibold text-lg">{group.title}</h3>
              </div>
              <div class="flex flex-wrap gap-2">
                {group.skills.map((skill) => (
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg bg-muted/50 text-sm font-medium text-foreground/80 group-hover:bg-muted group-hover:text-foreground transition-all">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
