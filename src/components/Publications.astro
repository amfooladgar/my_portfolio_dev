---
interface Props {
  data: Array<{
    title: string;
    authors: string;
    venue: string;
    year: string;
    citations: number;
    url?: string;
  }>;
}

const { data } = Astro.props;
---

<section id="publications" class="relative py-24 md:py-32">
  <div class="absolute inset-0 grid-pattern opacity-30"></div>
  <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12 relative z-10">
    <div class="space-y-16">
      <div class="space-y-4">
        <p
          class="text-sm font-medium text-muted-foreground tracking-wide uppercase"
        >
          Publications
        </p>
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight">
          Research & Publications
        </h2>
        <p class="text-muted-foreground text-lg max-w-2xl">
          Selected publications in information theory, wireless communications,
          and energy transfer.
        </p>
      </div>

      <div class="space-y-4">
        {
          data.map((pub, index) => (
            <div
              class="group relative border rounded-lg p-6 md:p-8 bg-background card-hover"
              style={`transition-delay: ${index * 50}ms`}
            >
              <div class="space-y-3">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 space-y-2">
                    {pub.url ? (
                      <a
                        href={pub.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group/link"
                      >
                        <h3 class="text-lg md:text-xl font-semibold tracking-tight group-hover/link:text-primary transition-colors">
                          {pub.title}
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="inline h-4 w-4 ml-1 opacity-0 group-hover/link:opacity-100 transition-opacity"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path d="M7 7h10v10" />
                            <path d="M7 17 17 7" />
                          </svg>
                        </h3>
                      </a>
                    ) : (
                      <h3 class="text-lg md:text-xl font-semibold tracking-tight">
                        {pub.title}
                      </h3>
                    )}
                    <p class="text-sm text-muted-foreground">{pub.authors}</p>
                    <p class="text-sm text-muted-foreground italic">
                      {pub.venue}
                    </p>
                  </div>
                  <div class="flex flex-col items-end gap-2 shrink-0">
                    <span class="text-sm font-medium px-3 py-1 bg-muted/50 rounded-md border">
                      {pub.year}
                    </span>
                    {pub.citations > 0 && (
                      <div class="flex items-center gap-1.5 text-xs text-muted-foreground">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20" />
                        </svg>
                        <span>{pub.citations} citations</span>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center pt-8">
        <a
          href="https://scholar.google.com/citations?user=NXqLwg4AAAAJ&hl=en"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 text-sm font-medium h-10 rounded-md px-6 bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          View all publications on Google Scholar
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M7 7h10v10"></path>
            <path d="M7 17 17 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
