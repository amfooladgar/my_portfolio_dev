<Layout
  title="All Projects | Ali Fouladgar"
  description="Comprehensive list of AI, cloud, and network engineering projects by Ali Fouladgar"
>
  <main class="relative">
    <!-- Hero Section -->
    <section class="relative py-16 md:py-24 border-b border-border">
      <div class="absolute inset-0 grid-pattern opacity-30"></div>
      <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12 relative z-10">
        <div class="max-w-3xl">
          <a
            href="/"
            class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="m12 19-7-7 7-7"></path>
              <path d="M19 12H5"></path>
            </svg>
            Back to Home
          </a>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
            All Projects
          </h1>
          <p class="text-lg text-muted-foreground">
            A comprehensive collection of AI, cloud, and network engineering projects spanning over 13 years of experience.
          </p>
        </div>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class="relative py-16 md:py-24">
      <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12">
        <div class="space-y-8">
          {
            allProjects.map((project, index) => (
              <div
                class="group relative border rounded-lg p-8 md:p-10 bg-background card-hover"
                style={`transition-delay: ${index * 50}ms`}
              >
                <div class="space-y-6">
                  <!-- Header -->
                  <div class="space-y-3">
                    <div class="flex items-start justify-between gap-4 flex-wrap">
                      <div class="flex-1">
                        <h2 class="text-2xl md:text-3xl font-bold tracking-tight mb-2">
                          {project.title}
                        </h2>
                        <div class="flex items-center gap-3 text-sm text-muted-foreground">
                          <span class="font-medium">{project.company}</span>
                          <span class="text-border">•</span>
                          <span>{project.period}</span>
                        </div>
                      </div>
                      {project.impact && (
                        <div class="px-4 py-2 bg-muted/50 rounded-lg border">
                          <p class="text-sm font-medium">{project.impact}</p>
                        </div>
                      )}
                    </div>
                    <p class="text-muted-foreground text-lg leading-relaxed">
                      {project.description}
                    </p>
                  </div>

                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2">
                    {project.tags.map((tag) => (
                      <span class="text-xs px-3 py-1.5 bg-muted/50 rounded-md font-medium border">
                        {tag}
                      </span>
                    ))}
                  </div>

                  <!-- Technologies -->
                  {project.technologies && project.technologies.length > 0 && (
                    <div class="space-y-2">
                      <h3 class="text-sm font-medium text-muted-foreground">
                        Technologies
                      </h3>
                      <div class="flex flex-wrap gap-2">
                        {project.technologies.map((tech) => (
                          <span class="text-xs px-2.5 py-1 bg-background rounded-md font-mono border">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}

                  {/* Media - Image or Placeholder */}
                  {(project.mediaPath || project.mediaPlaceholder) && (
                    <div class="rounded-lg overflow-hidden border border-border">
                      {project.mediaPath ? (
                        <img
                          src={project.mediaPath}
                          alt={project.title}
                          class="w-full h-auto object-cover"
                        />
                      ) : (
                        <div class="p-6 bg-muted/30 border-dashed">
                          <div class="flex items-center gap-3 text-muted-foreground">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-5 w-5"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2"
                            >
                              <rect width="18" height="18" x="3" y="3" rx="2" ry="2" />
                              <circle cx="9" cy="9" r="2" />
                              <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21" />
                            </svg>
                            <span class="text-sm italic">{project.mediaPlaceholder}</span>
                          </div>
                        </div>
                      )}
                    </div>
                  )}

                  <!-- Links -->
                  {project.links && project.links.length > 0 && (
                    <div class="flex flex-wrap items-center gap-2 pt-4 border-t">
                      {project.links.map((link) => (
                        <a
                          href={link.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="inline-flex items-center justify-center text-sm font-medium h-9 rounded-md gap-1.5 px-4 border bg-background shadow-xs hover:bg-foreground hover:text-background transition-colors"
                        >
                          {link.label}
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-3.5 w-3.5"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            <path d="M7 7h10v10" />
                            <path d="M7 17 17 7" />
                          </svg>
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
